local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

-- ğŸ”¹ Biáº¿n Ä‘á»ƒ thay Ä‘á»•i kÃ­ch thÆ°á»›c hitbox
_G.hitboxSize = 10  -- Máº·c Ä‘á»‹nh lÃ  10 (Báº¡n cÃ³ thá»ƒ thay Ä‘á»•i)

local function applyESP(character, player)
    if not character then return end
    repeat wait() until character:FindFirstChild("HumanoidRootPart")

    local head = character:FindFirstChild("Head")
    local root = character:FindFirstChild("HumanoidRootPart")
    if not head or not root then return end

    -- ğŸŸ¢ Cáº­p nháº­t mÃ u theo team
    local color = Color3.new(1, 0, 0) -- ğŸ”´ Máº·c Ä‘á»‹nh lÃ  Ä‘á» (káº» Ä‘á»‹ch)
    if player.Team and player.Team == game.Players.LocalPlayer.Team then
        color = Color3.new(0, 0, 1) -- ğŸ”µ Xanh nÆ°á»›c biá»ƒn (Ä‘á»“ng Ä‘á»™i)
    end

    -- ğŸ“Œ Táº¡o Name ESP
    local billboard = Instance.new("BillboardGui", game.CoreGui)
    billboard.Adornee = head
    billboard.Size = UDim2.new(0, 100, 0, 30)
    billboard.StudsOffset = Vector3.new(0, 2, 0)
    billboard.AlwaysOnTop = true

    local textLabel = Instance.new("TextLabel", billboard)
    textLabel.Size = UDim2.new(1, 0, 1, 0)
    textLabel.BackgroundTransparency = 1
    textLabel.Text = player.Name
    textLabel.TextColor3 = color
    textLabel.TextStrokeTransparency = 0.5
    textLabel.Font = Enum.Font.SourceSansBold
    textLabel.TextSize = 14

    -- ğŸ“Œ Táº¡o Box ESP (Highlight)
    local highlight = Instance.new("Highlight", character)
    highlight.FillTransparency = 0.5
    highlight.OutlineColor = color
    highlight.OutlineTransparency = 0

    -- ğŸ“Œ Táº¡o Hitbox
    local hitbox = Instance.new("Part", character)
    hitbox.Size = Vector3.new(_G.hitboxSize, _G.hitboxSize, _G.hitboxSize)
    hitbox.Transparency = 0.7
    hitbox.CanCollide = false
    hitbox.Anchored = true
    hitbox.Color = color
    hitbox.Material = Enum.Material.ForceField

    -- Cáº­p nháº­t vá»‹ trÃ­ hitbox + thay Ä‘á»•i kÃ­ch thÆ°á»›c náº¿u `_G.hitboxSize` thay Ä‘á»•i
    local updateConnection
    updateConnection = RunService.RenderStepped:Connect(function()
        if character and root then
            hitbox.Position = root.Position
            hitbox.Size = Vector3.new(_G.hitboxSize, _G.hitboxSize, _G.hitboxSize)
        else
            updateConnection:Disconnect()
        end
    end)

    -- XÃ³a ESP khi nhÃ¢n váº­t cháº¿t
    character.Destroying:Connect(function()
        billboard:Destroy()
        highlight:Destroy()
        hitbox:Destroy()
    end)
end

-- ğŸ“Œ Ãp dá»¥ng ESP + Hitbox cho táº¥t cáº£ ngÆ°á»i chÆ¡i Ä‘Ã£ cÃ³ máº·t
for _, player in pairs(Players:GetPlayers()) do
    if player.Character then
        applyESP(player.Character, player)
    end
    player.CharacterAdded:Connect(function(character)
        applyESP(character, player)
    end)
end

-- ğŸ“Œ Ãp dá»¥ng ESP + Hitbox cho ngÆ°á»i chÆ¡i má»›i vÃ o
Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function(character)
        applyESP(character, player)
    end)
end)
